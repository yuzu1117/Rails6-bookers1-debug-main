<div>
  <% book.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image, size:'100x100' %>
        <%= comment.comment %>
        <% if current_user == comment.user %>
          <%= link_to 'Destroy', book_comment_path(book, comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
        <% end %>
        </p>
  <% end %>
</div>

