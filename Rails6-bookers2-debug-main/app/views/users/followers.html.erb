<div class='container'>
  <div class='row'>
    <div class='col'>
      <h1>Followers</h1>
        <table class='table'>

          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
                <td><%= user.name %></td>
                <td>フォロー数:<%= user.following_user.count %></td>
                <td>フォロワー数:<%= user.follower_user.count %></td>
                <td><%= link_to 'Show', user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>

        </table>
    </div>
  </div>
</div>